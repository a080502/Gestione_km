<?xml version="1.0"?>
<ruleset name="Gestione_km Coding Standard">
    <description>Coding standard per il progetto Gestione_km</description>

    <!-- Include PSR-12 coding standard with some exclusions -->
    <rule ref="PSR12">
        <!-- Esclude alcune regole troppo restrittive per codice legacy -->
        <exclude name="PSR1.Files.SideEffects"/>
        <exclude name="PSR2.Files.ClosingTag"/>
        <exclude name="Generic.Files.LineLength"/>
    </rule>

    <!-- Files to check -->
    <file>.</file>

    <!-- Ignore vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>tcpdf/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>Cestino/*</exclude-pattern>
    <exclude-pattern>backups/*</exclude-pattern>
    <exclude-pattern>denis/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="p"/>

    <!-- Use colors in output -->
    <arg name="colors"/>

    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Impostazioni personalizzate per il progetto -->
    <rule ref="Generic.Files.LineEndings">
        <properties>
            <property name="eolChar" value="\n"/>
        </properties>
    </rule>

    <!-- Lunghezza massima linea piÃ¹ permissiva -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="150"/>
            <property name="absoluteLineLimit" value="200"/>
        </properties>
    </rule>
</ruleset>